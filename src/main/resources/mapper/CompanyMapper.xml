<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.kosa.visang.domain.company.repository.CompanyMapper">
    <resultMap id="CompanyResultMap" type="kr.or.kosa.visang.domain.company.model.Company">
        <id column="company_id" property="companyId" jdbcType="BIGINT"/>
        <result column="company_name" property="companyName" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="save" parameterType="kr.or.kosa.visang.domain.company.model.Company">
        <selectKey keyProperty="companyId" resultType="long" order="BEFORE">
            SELECT company_seq.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO company (company_id, company_name, created_at)
        VALUES (#{companyId}, #{companyName}, #{createdAt})
    </insert>
    
    <select id="findById" resultMap="CompanyResultMap">
        SELECT company_id, company_name, created_at
        FROM company
        WHERE company_id = #{companyId}
    </select>
    
    <select id="findByName" resultMap="CompanyResultMap">
        SELECT company_id, company_name, created_at
        FROM company
        WHERE company_name = #{companyName}
    </select>
    
    <select id="isCompanyNameExists" resultType="int">
        SELECT COUNT(*)
        FROM company
        WHERE company_name = #{companyName}
    </select>
</mapper> 